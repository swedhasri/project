{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "installCommand": "npm ci --prefix client",
  "buildCommand": "npm run build --prefix client",
  "routes": [
    { "src": "/(.*)", "dest": "client/dist/index.html" }
  ]
}
