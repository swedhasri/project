{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "installCommand": "npm ci --prefix client",
  "buildCommand": "npm run build --prefix client",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
